<div class="container mt-3">
  <h1>Add a restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name, label: 'Name', placeholder: 'TastyBuns' %>
    <%= f.input :address, label: 'Adress', placeholder: 'Saliva Road 386' %>
    <%= f.input :phone_number, placeholder: '+41 98 765 43 21' %>
    <%= f.input :category, as: :select, :collection => %w[chinese italian japanese french belgian] %>
    <%= f.button :submit, class: "btn btn-outline-primary" %>
  <% end %>
</div>
